<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Survey question 1 -->

    <LinearLayout
        android:id="@+id/layout_q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <!-- Question -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Would you be interested in beta for associates android SDK?"
            android:textSize="18dp" />

        <!-- Options -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_response_yes1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:tag="q1"
                android:text="Yes" />

            <Button
                android:id="@+id/btn_response_no1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:tag="q1"
                android:text="No" />

            <Button
                android:id="@+id/btn_response_hide1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:tag="q1"
                android:text="Hide" />
        </LinearLayout>
    </LinearLayout>

    <!-- Survey question 2 -->

    <LinearLayout
        android:id="@+id/layout_q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <!-- Question -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Would you prefer shortlinks with tracking parameters hidden over long links?"
            android:textSize="18dp" />

        <!-- Options -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_response_yes2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:tag="q2"
                android:text="Yes" />

            <Button
                android:id="@+id/btn_response_no2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:tag="q2"
                android:text="No" />

            <Button
                android:id="@+id/btn_response_hide2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:tag="q2"
                android:text="Hide" />
        </LinearLayout>
    </LinearLayout>

    <!-- Survey question 3 -->

    <LinearLayout
        android:id="@+id/layout_q3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <!-- Question -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Are you satisfied with Amazon Associates program?"
            android:textSize="18dp" />

        <!-- Options -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_response_yes3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:tag="q3"
                android:text="Yes" />

            <Button
                android:id="@+id/btn_response_no3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:tag="q3"
                android:text="No" />

            <Button
                android:id="@+id/btn_response_hide3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:tag="q3"
                android:text="Hide" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>